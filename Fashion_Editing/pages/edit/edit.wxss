/* pages/edit/edit.wxss */
@import "/icon/iconfont.wxss";
.upper-toolsbar {
  display: block;
  width: 100%;
  height: 100rpx;
}

.upper-button {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-right: 30rpx;
}

.left-s {
  /* 靠左-中等距离 */
  position: fixed;
  left: 15rpx;
}

.right-s {
  /* 靠右-小距离 */
  position: fixed;
  right: -10rpx;
}

.right-l {
  /* 靠左-大距离 */
  position: fixed;
  right: 90rpx;
}

