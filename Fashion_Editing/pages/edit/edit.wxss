/* pages/edit/edit.wxss */
.button {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-right: 30rpx;
}

.left-s {
  /* 靠左-中等距离 */
  position: fixed;
  left: 15rpx;
}

.right-s {
  /* 靠右-小距离 */
  position: fixed;
  right: -10rpx;
}

.right-l {
  /* 靠左-大距离 */
  position: fixed;
  right: 90rpx;
}

.upload-image {
  display:flex;
  height: 600px;                    
  justify-content: center;       
  align-items:center;
}

.upper-toolsbar {
  display: block;
  width: 100%;
  height: 100rpx;
}
.myCanvas{
  border: 1px solid #666;
}

.toolsbar{
  width: 97%;
  height: 200rpx;
  text-align: center;
  border: 1px solid #000;
  margin: 1px 1px 1px 1px;
  background-color: #fff;
}

.canvas_tools{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.t-item{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 20rpx auto;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
}

.t-item-cur{
  width: 43rpx;
  height: 45rpx;
  border: 4rpx solid #CCC;
  margin: 20rpx auto;
  text-align: center;
  line-height: 45rpx;
  border-radius: 50%;
}

.t-clear{
  width: 70rpx;
  height: 70rpx;
  margin: 6rpx;
  text-align: center;
  line-height: 70rpx;
  border: 2px solid #bfbfbf;
  border-radius: 5rpx;
}

.t-insert{
  width: 78rpx;
  height: 78rpx;
  margin: 6rpx;
}

.lower-toolsbar {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}
