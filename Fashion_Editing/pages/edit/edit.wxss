.color-item{
  width: 60%;
  height: 60%;
  margin: 10rpx auto;
  text-align: center;
  line-height: 60%;
  border-radius: 50%;
}

.color-item-cur{
  width: 65%;
  height: 65%;
  border: 4rpx solid #CCC;
  margin: 5rpx auto;
  text-align: center;
  border-radius: 50%;
}

.size-item{
  width: 100%;
  height: 100%;
  margin: 10rpx auto;
  text-align: center;
  line-height: 100%;
  border-radius: 50%;
}

.size-item-cur{
  width: 45rpx;
  height: 45rpx;
  border: 4rpx solid #CCC;
  margin: 5rpx auto;
  text-align: center;
  line-height: 45rpx;

  border-radius: 50%;
}

.lower-toolsbar {
  width: 100%;
  height: 100rpx;
  background-color: #f7f7f7;
  position: fixed;
  bottom: 0;
}

.lower-button {
  display: inline-block;
  width: 25%;
  text-align: center;
  color: #7f8389;
  font-size: 22rpx;
}

.lower-button .iconfont {
  height: 70rpx;
  font-size: 50rpx;
  line-height: 70rpx;
}

.green {
  color: #07c160;
}